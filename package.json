{
  "name": "tendo-notifier",
  "version": "0.1.76-preview",
  "description": "A comprehensive, type-safe real-time notification system for e-commerce applications using Tendo and React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "require": "./dist/react/index.js",
      "default": "./dist/react/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "./dist/react/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp -r sounds dist/ && node scripts/generate-react-package.js",
    "test": "jest",
    "test:coverage": "jest --coverage --maxWorkers=2",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "docs": "typedoc --out docs src/",
    "clean": "rm -rf dist coverage docs",
    "typecheck": "tsc --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Duke-Engineering/duke-notifier.git"
  },
  "keywords": [
    "notifications",
    "real-time",
    "supabase",
    "react",
    "typescript",
    "e-commerce",
    "websockets",
    "audio",
    "browser-notifications",
    "order-management"
  ],
  "author": {
    "name": "Duke",
    "url": "https://github.com/quajodk"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Duke-Engineering/duke-notifier/issues"
  },
  "homepage": "https://github.com/Duke-Engineering/duke-notifier#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-recommended-bump": "^11.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.0.0"
  }
}
